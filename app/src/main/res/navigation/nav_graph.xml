<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainActivity">

    <activity
        android:id="@+id/mainActivity"
        android:name="com.smb.smartmoneybox.ui.activities.MainActivity"
        android:label="Умная Копилка"
        tools:layout="@layout/activity_main">

        <action
            android:id="@+id/action_to_goal_edit"
            app:destination="@id/goalEditActivity" />

        <action
            android:id="@+id/action_to_goal_detail"
            app:destination="@id/goalDetailActivity" />

    </activity>

    <activity
        android:id="@+id/goalEditActivity"
        android:name="com.smartmoneybox.ui.activities.GoalEditActivity"
        android:label="Редактирование цели"
        tools:layout="@layout/activity_goal_edit" />

    <activity
        android:id="@+id/goalDetailActivity"
        android:name="com.smartmoneybox.ui.activities.GoalDetailActivity"
        android:label="Детали цели"
        tools:layout="@layout/activity_goal_detail" />

</navigation>